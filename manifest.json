{
  "manifest_version": 2,

  "name": "FastMail Enhancement Suite",
  "description": "Handy tools and improvements to FastMail.com",
  "version": "1.6.0",

  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "js": ["js/loader.js"],
      "run_at": "document_end",
      "matches": [
        "http://*.fastmail.com/*",
        "https://*.fastmail.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "pages/options.html",
  "page_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "FastMail Enhancement Suite"
  },
  "permissions": [
    "http://*.fastmail.com/*",
    "https://*.fastmail.com/*",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "js/main.js",
    "js/jquery.js",
    "pages/options.js"
  ]
}
